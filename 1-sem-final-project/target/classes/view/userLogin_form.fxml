<AnchorPane fx:id="loginPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.cinnamonProduction.controller.userLoginFormController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="900.0">
         <image>
            <Image url="@../icon/backg2.jpg" />
         </image>
      </ImageView>
      <Label layoutX="49.0" layoutY="68.0" opacity="0.51" prefHeight="470.0" prefWidth="341.0" style="-fx-background-color: white;" />
      <Label layoutX="84.0" layoutY="312.0" text="password" />
